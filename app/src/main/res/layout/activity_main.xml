<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="32dp"
        android:layout_above="@id/result_tv"
        android:textColor="#FFFFFF"
        android:textAlignment="textEnd"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_panel"
        android:text="0"
        android:textSize="64dp"
        android:textColor="#FFFFFF"
        android:textAlignment="textEnd"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                android:background="@drawable/button_handler"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="AC"
                android:textSize="20dp"
                android:onClick="ac_onClick"

                android:textColor="#FF541E"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="C"
                android:textSize="20dp"
                android:onClick="c_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_power"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="^"
                android:textSize="32dp"
                android:onClick="pow_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="/"
                android:textSize="32dp"
                android:onClick="divide_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_seven"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:background="@drawable/button_handler"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:onClick="seven_onClick"
                android:text="7"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eight"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="8"
                android:textSize="32dp"
                android:onClick="eight_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nine"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="9"
                android:textSize="32dp"
                android:onClick="nine_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="*"
                android:onClick="multiply_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FF541E"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_four"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="4"
                android:onClick="four_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_five"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="5"
                android:onClick="five_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_six"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="6"
                android:onClick="six_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="-"
                android:onClick="minus_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FF541E"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_one"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="1"
                android:onClick="one_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_two"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="2"
                android:onClick="two_onClick"
                android:background="@drawable/button_handler"
                android:textSize="32dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_three"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="3"
                android:textSize="32dp"
                android:onClick="three_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="+"
                android:textSize="32dp"
                android:onClick="plus_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_next"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="N"
                android:textSize="32dp"
                android:onClick="next_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_zero"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="0"
                android:textSize="32dp"
                android:onClick="zero_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="."
                android:textSize="32dp"
                android:onClick="dot_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:text="="
                android:textSize="32dp"
                android:onClick="result_onClick"
                android:background="@drawable/button_handler"
                android:textColor="#FF541E"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>